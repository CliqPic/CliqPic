<header class='card'>
  <div class='card-content'>
    <h5 class='card-title'>
      <span class='right thin'><%= pluralize(@album.images.count, 'image').upcase %></span>
      <%= @album.name.upcase %>
    </h5>
  </div>
  <div class='card-action' style='text-align: right;'>
    <%= link_to 'Edit Album Details', edit_event_album_path(@event, @album), class: 'btn-flat black-text' %>
    <%= link_to 'Add/Remove Images', edit_event_album_path(@event, @album), class: 'btn-flat black-text' %>
    <%= link_to 'Download Images', event_album_path(@event, @album, format: :zip), class: 'btn-flat black-text' %>
    <%= link_to 'Back to Event', @event, class: 'btn-flat black-text' %>
  </div>
</header>

<div class='row'>
  <% @album.images.each_with_index do |image, index| %>
    <div class='col s12 m6 l3'>
      <section class='image card'>
        <div class='card-image'>
          <%= link_to image.high_res_url, target: '_blank' do %>
            <%= tag :img, src: image.thumbnail_url %>
          <% end %>
        </div>
      </section>
    </div>
  <% end %>
</div>
